#!/bin/bash
#
### File managed by Puppet
#
if [ "$IFACE" = "<%= @interface -%>" ] || [ "$IFACE" = "--all" ]; then
<%- (0..(@ipaddress.length-1)).each do |id| -%>
    ip<%- if @family and @family[id] == 'inet6' -%> -6<%- end -%> route show | grep -qF "<%= @ipaddress[id] %>/<%= @netmask[id] %>" && ip<%- if @family and @family[id] == 'inet6' -%> -6<%- end -%> route del <%= @ipaddress[id] %>/<%= @netmask[id] %><%- if @gateway and @gateway[id] -%> via <%= @gateway[id] %><%- end -%> dev <%= @interface %> <%- if @scope and @scope[id] -%> scope <%= @scope[id] %><%- end -%><%- if @source and @source[id] -%> src <%= @source[id] %><%- end -%><%- if @table and @table[id] -%> table <%= @table[id] %><% end %><%- if @metric and @metric[id] -%> metric <%= @metric[id] %><% end %>
<%- end -%>
fi
